<Window x:Class="Astakona.UpdateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Astakona"
        mc:Ignorable="d"
        Title="Update Account" 
        Height="200" 
        Width="500">
    
    <Grid>
        <Label x:Name="PlaceholderLB" FontSize="20" FontFamily="Helvetica" Margin="30 50 0 0"/>
        <TextBox x:Name="PlaceholderTB" Width="300" Height="30" Margin="80 0 0 45"/>
        <Button Width="150" Height="50" Margin="230 100 0 0" Content="Update" FontWeight="Bold" Click="UpdateButtonClick"/>
        <Button Width="150" Height="50" Margin="0 100 150 0" Content="Cancel" FontWeight="Bold" Click="CancelButtonClick"/>
    </Grid>
</Window>
