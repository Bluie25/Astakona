<Window x:Class="Astakona.OrderPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Astakona"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Order Page" Height="1080" Width="1920"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <TextBlock Text="Order List" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0 0 0" FontWeight="Bold" FontSize="25"/>
            </Grid>

            <Grid Grid.Column="1">
                <Button Content="Home Page" FontWeight="Bold" Height="30" Width="200" HorizontalAlignment="Right" Margin="0 0 30 0" Click="HomePageButton_Click"/>
                <TextBlock FontWeight="Bold" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 250 0">
                    <TextBlock.Text>
                        <Binding Source="{x:Static sys:DateTime.Now}" StringFormat=" {0:dd MMM yyyy}, {0:HH:mm tt}" />
                    </TextBlock.Text>
                </TextBlock>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <ListView ItemsSource="{Binding Orders}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nama Barang" Width="300" DisplayMemberBinding="{Binding InventoryName}" />
                        <GridViewColumn Header="Jumlah Orderan" Width="150" DisplayMemberBinding="{Binding Amount}" />
                        <GridViewColumn Header="Pemakaian Paku 2 1/2 Inci" Width="150" DisplayMemberBinding="{Binding BigScrew}" />
                        <GridViewColumn Header="Pemakaian Paku 2 Inci" Width="150" DisplayMemberBinding="{Binding SmallScrew}" />
                        <GridViewColumn Header="Jumlah Terproduksi" Width="150" DisplayMemberBinding="{Binding ProductionCompleted}" />
                        <GridViewColumn Header="Jumlah HT" Width="150" DisplayMemberBinding="{Binding HeatCompleted}" />
                        <GridViewColumn Header="Tanggal Order" Width="100" DisplayMemberBinding="{Binding Date}" />
                        <GridViewColumn Header="Customer" Width="100" DisplayMemberBinding="{Binding Customer}" />
                        <GridViewColumn Header="Update Order" Width="100" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Update"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>

        <Grid Grid.Row="2">
            <Button Content="Add Order" Width="150" Height="50" HorizontalAlignment="Right" Margin="0 0 40 0" FontWeight="Bold" Click="AddOrderButton_Click"/>
        </Grid>

    </Grid>
</Window>
