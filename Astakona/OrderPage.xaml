<Window x:Class="Astakona.OrderPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Astakona"
        mc:Ignorable="d"
        Title="Order Page" Height="450" Width="800"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="40"></Grid>

        <Grid Grid.Row="1">
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Nama Barang" Width="300" />
                        <GridViewColumn Header="Jumlah Orderan" Width="100" />
                        <GridViewColumn Header="Terselesaikan" Width="100" />
                        <GridViewColumn Header="Status HT" Width="100"/>
                        <GridViewColumn Header="Tanggal Order" Width="100"/>
                        <GridViewColumn Header="Customer" Width="100"/>
                        <GridViewColumn Header="Cancel Order" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>


        <Grid Grid.Row="2" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            <Button Width="100" Height="50" Grid.Column="1" Content="Add Order" HorizontalAlignment="Center"/>

        </Grid>
    </Grid>
</Window>
